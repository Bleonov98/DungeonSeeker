#version 400 core

in vec2 TexCoords;
in vec3 spriteColour;
in flat int fragTexIndex;
out vec4 colour;

uniform bool menu;
uniform sampler2D image[16];

uniform bool test;

void main()
{
    if (menu) colour = vec4(spriteColour * 0.35f, 1.0) * texture(image[fragTexIndex], TexCoords);
    else colour = vec4(spriteColour * 0.8f, 1.0) * texture(image[fragTexIndex], TexCoords);

    if (test)
        colour = vec4(spriteColour, 1.0f);
}